<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="查询类型："
            android:textSize="20dp"
            />

        <Spinner
            android:id="@+id/spfindtype"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:layout_gravity="right"
            >
        </Spinner>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_link_select_2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"

        >

        <EditText
            android:id="@+id/et_find"
            android:layout_width="300dp"
            android:layout_height="40dp"

            android:background="@drawable/edit_background"
            android:gravity="center"
            android:hint="请输入要查询的内容"
            android:textColorHint="#838B8B"/>

        <ImageView
            android:id="@+id/imgv_find"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="#F0FFFF"
            android:padding="3dp"
            android:src="@drawable/ic_icon_search"/>


    </LinearLayout>

    <Button
        android:id="@+id/add_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加书籍"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:background="#87CEFF"
        android:layout_marginTop="10dp"
        />
    <!--<Button-->
    <!--android:id="@+id/button"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"/>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"

        android:background="#7EC0EE"
        android:gravity="center"
        android:text="图书信息"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        />

    <ListView
        android:id="@+id/lvbookinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />


    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/rclist"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"/>-->

</LinearLayout>