<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:orientation="horizontal"
              android:descendantFocusability="blocksDescendants"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/bookimg"
            android:layout_width="130dp"
            android:layout_height="134dp"
            android:src="@drawable/ic_launcher_background"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_weight="3"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvbnov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编号1"/>


        <TextView
            android:id="@+id/tvbnamev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="西游记"/>


        <TextView
            android:id="@+id/tvbauthorv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="吴承恩"/>

        <TextView
            android:id="@+id/tvbnumv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"/>


        <TextView
            android:id="@+id/tvbpricev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥24.50"/>


        <TextView
            android:id="@+id/tvbversionv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第四版"/>


        <TextView
            android:id="@+id/tvbpressv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人民出版社"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_compile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_icon_compile"
            />

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_icon_delete"
            android:focusable="false"/>


    </LinearLayout>

</LinearLayout>
